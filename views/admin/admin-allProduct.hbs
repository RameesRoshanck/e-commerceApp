 <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        {{>admin-header}}
	    {{>admin-sideNavbar}}
        <div class="content-body">
            <div class="container-fluid">
				<!-- Add Order -->
				
                <div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active"><a href="#">Products</a></li>
					</ol>
                </div>
                <!-- row -->
                <div class="row">
					<div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Products Table</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example4" class="display min-w850">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Image</th>
                                                <th>Product Name</th>
                                                <th>Product ID</th>
                                                <th>price</th>
                                                <th>Date</th>
                                                <th>Catagory</th>
												<th>stock</th>
                                                <th>Offer</th>
                                                <th>Discription</th>
                                                <th>Update</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each products }}
                                            <tr>
                                                <td>{{@index}}</td>
                                                <td><img style="width:110px;height:130px"
                                                            src="/product-images/{{this.image.[0]}}" alt="pic"></td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.prd_Id}}</td>
                                                <td>{{this.price}}</td>
                                                <td>{{this.date}}</td>
                                                <td>{{this.catagory}}</td>
                                                <td>{{this.stock}}</td>
                                                <td>{{this.offer}}</td>
                                                <td>{{this.description}}</td>
                                                <td> 
                                                    <a href="/admin/editProduct/{{this._id}}" class="btn btn-primary shadow btn-xs sharp mr-1"><i class="fa fa-pencil"></i></a>
                                                </td>
                                                <td>
                                    
                                                   <a href="/admin/deleteProduct/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.catagory}}')" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>

                                                </td>
                                            </tr>
                                            {{/each}}
                                      </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
				</div>
            </div>
        </div>
    </div>

    <script src="/adminSide/assets/vendor/global/global.min.js"></script>
    <!-- Datatable -->
    <script src="/adminSide/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/adminSide/assets/js/plugins-init/datatables.init.js"></script>

