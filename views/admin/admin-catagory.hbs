 <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        {{>admin-header}}
	    {{>admin-sideNavbar}}



        <div class="content-body">
            <div class="container-fluid">
				<!-- Add Order -->
				
                <div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Brand</a></li>
					</ol>
                </div>
              <div class="col-xl-6 col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Add Brand</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                     <form  onsubmit="return myFunc()" action="/admin/addCatagory" method="post" enctype="multipart/form-data" >
                                        <div class="form-row">
                                            <div class="form-group">
                                                <label>Brand Name</label>
                                                <input type="text" class="form-control" placeholder="entet the Brand name" id="catagoryId" name="catagory" onkeyup="ctgrValidate()"  >
                                                <span class="text-primary"  id="catagoryErr"style="color:red !important ;"  ></span>
                                            </div>
                                             <div class="form-group">
                                                 <label>Choose Image File</label>
                                                 <input type="file" name="image" class="form-control" >
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">ADD Brand</button>
                                    </form>
                                </div>
                            </div>
                        </div>
					</div>
                <!-- row -->
                <div class="row">
					<div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Brand Table</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example4" class="display min-w850">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Images</th>
                                                <th>Brands</th>
                                                <th>Edit</th>
												<th>action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each Brand}}
                                            <tr>
                                                <td>{{@index}}</td>
                                                <td><img style="width:50px;,height:50px ;" src="/brand-images/{{this._id}}.png" alt=""> </td>
                                                <td>{{this.catagory}}</td>
                                                   <td><a  href="/admin/editcatagory/{{this._id}}"class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-pencil"></a></td> 
                                                    <td><a  href="/admin/deleteCatagory/{{this._id}}"  onclick="return confirm('Are you sure you want to delete {{this.catagory}}?')" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a></td>
                                            </tr>
                                          {{/each}}
                                      </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
				</div>
            </div>
        </div>
    </div>
     





